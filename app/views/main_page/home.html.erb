<% @active = :home %>
<% if !@slides.blank? %>
	<div class="carousel-wrapper">
		<div id="myCarousel" class="carousel slide" data-ride="carousel">
			<!-- Indicators -->
			<ol class="carousel-indicators">
				<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
				<% 1.upto(@slides.all.count-1) do |n| %>
					<li data-target="#myCarousel" data-slide-to="<%= n%>"></li>
				<% end %>
			</ol>
			<!-- Wrapper for slides -->
			<div class="carousel-inner" role="listbox">
				<div class="item active">
					<%= link_to(image_tag(@slides.first.image_url.to_s), @slides.first.url)%>
					<div class="carousel-caption">
						<%=@slides.first.text%>
					</div>
				</div>
				<% @slides.all[1..-1].each do |slide| %>
					<div class="item">
						<%= link_to(image_tag(slide.image_url.to_s), slide.url)%>
						<div class="carousel-caption">
							<%=slide.text%>
						</div>
					</div>
				<% end %>
			</div>

			<!-- Left and right controls -->
			<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div>
<% end %>
<!-- <hr class="hr-text" data-content="New Posts"> -->
<div class="container posts-brief">
	<% @posts.each_with_index do |post, i|%>
		<% if i % 2 == 0 %>
			<div class="left">
			<% else %>
				<div class="right">
				<% end %>
				<div class="image">
					<% if !post.images.empty? %>
						<%= image_tag(post.images.first.url.to_s) %> 
					<% end %>
				</div>
				<div class="text">
					<span class="post-name"><%= post.name %></span>
					<span ><%= simple_format(post.text.truncate_words(9))%> </span>
					<%= link_to('Read more', show_post_path(post.permalink), :class => 'button') %>
				</div>
				</div>
			<% end %>
			</div>
			<div class="youtube">
				<hr class="hr-text" data-content="YouTube">
				<div class="video">
					<iframe width="100%" height="100%" src="https://www.youtube.com/embed/jS6pELr7WJU" frameborder="0" allowfullscreen></iframe>
				</div>
			</div>
</div>


