<div class="messages index">
  <h2>Сообщения, отправленные вам:</h2>

  <table summary="Message list">
    <tr class="header">
      <th>Дата создания</th>
      <th>Имя</th>
      <th>Тема</th>
      <th>Телефон</th>
      <th>Электронная почта</th>
      <th>Текст сообщения</th>
      <th>Actions</th>
    </tr>
    <% @messages.each do |message| %>
    <tr>
      <td><%= message.created_at.to_formatted_s(:long) %></td>
      <td><%= message.name %></td>
      <td><%= message.theme %></td>
      <td><%= message.phone_number %></td>
      <td><%= message.email %></td>
      <td><%= message.text %></td>
      <td class="actions">
        <%= link_to('Show', message_path(message), metod: :get, :class => 'action show') %>
        <%= link_to('Delete', message_path(message), method: :delete, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
