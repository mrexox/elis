<h2>Enter a form!</h2>

<%= form_for(@message, url: {controller: 'messages', action: 'create'}, html: {method: 'post'}) do |f| %>
<table summary="Page from fields">
  <tr>
    <th>Ваше имя</th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th>Ваш телефон</th>
    <td><%= f.phone_field(:phone_number) %> </td>
  </tr>
  <tr>
    <th>Ваш e-mail</th>
    <td><%= f.text_field(:email) %></td>
  </tr>
  <tr>
    <th>Тема сообщения</th>
    <td><%= f.text_field(:theme) %></td>
  </tr>
  <tr>
    <th>Текст сообщения</th>
    <td><%= f.text_area(:text) %></td>
  </tr>
</table>
<%= f.submit("Send a message") %>
<%  end %>
